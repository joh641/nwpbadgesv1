#container
  .header-container.row
    %h1 Details about #{@submission.name}'s submission
  .content.row
    .left-column-container.column.col-md-3
      %h2 Admin
      %ul
        %li= link_to 'Approve submission', approve_submission_path, :method => :get, :confirm => 'Are you sure?'
        %li= link_to 'Reject submission', reject_submission_path, :method => :get, :confirm => 'Are you sure?'
        %li= link_to 'Delete submission', submission_path(@submission), :method => :delete, :confirm => 'Are you sure?'
        %li= link_to 'Push badge to Mozilla Backpack', push_submission_path, :method => :get, :confirm => 'Are you sure?'
        %li= link_to 'Back to submission list', submissions_path
    .right-column-container.column.container.col-md-8 
      %ul#details
        %li
          Email:
          = @submission.email
        %li
          Badge:
          = @submission.badge.name
        %li
          Date:
          = @submission.date.strftime("%B %d, %Y")
        %li
          Status:
          = @submission.status

      %h3 Description:
      #description= @submission.description

