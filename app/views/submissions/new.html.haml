%h1 Create a Submission

= form_tag submissions_path do

  = label :submission, :name, 'Name'
  = text_field :submission, :name

  = label :submission, :badge, 'Badge'
  = select :submission, :badge, @all_badges

  = label :submission, :date, 'Date'
  = date_select :submission, :date

  = label :submission, :description, 'Description'
  = text_area :submission, :description

  = submit_tag 'Save Changes'
